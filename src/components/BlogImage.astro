---
import GGImage from './GGImage.tsx';

export interface Props {
  src: string;
  alt: string;
  title?: string;
  width?: number;
  height?: number;
}

const { src, alt, title, width, height, ...attrs } = Astro.props;
---

<GGImage
  src={src}
  alt={alt}
  title={title}
  width={width}
  height={height}
  client:load
  {...attrs}
/>
