---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import MDXImage from '../components/MDXImage';

type Props = CollectionEntry<'posts'>['data'];

const { title, description, date, tags, category } = Astro.props;

// Componentes customizados para MDX
export const components = {
  img: MDXImage,
  // VocÃª pode adicionar outros componentes customizados aqui:
  // h1: CustomH1,
  // blockquote: CustomBlockquote,
  // code: CustomCode,
};
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="content">
          <div class="date">
            <FormattedDate date={date} />
          </div>
          <h1 class="content__title">{title}</h1>
          <hr />

          <div class="content__body">
            <slot />
          </div>

          <div class="post-footer">
            <div class="post-meta">
              <div class="published-date">
                Published <FormattedDate date={date} />
              </div>

              {
                tags && (
                  <div class="tags">
                    {tags.map((tag: string) => (
                      <a href={`/tag/${tag.toLowerCase()}/`} class="tag">
                        {tag}
                      </a>
                    ))}
                  </div>
                )
              }

              <a
                href="https://www.twitter.com/ggdaltoso"
                class="author-link"
                target="_blank"
                rel="noopener noreferrer"
              >
                Gabriel Daltoso on Twitter
              </a>
            </div>

            <div class="navigation">
              <a href="/">Todos os artigos</a>
            </div>
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
