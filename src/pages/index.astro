---
import { getCollection } from 'astro:content';
import { BlankScreen100, Mail } from '@react95/icons';
import { Avatar } from '@react95/core';

import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const blog = await getCollection('posts');
const posts = blog
  .sort((a, b) => {
    return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
  })
  .map((post) => post.data);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        display: flex;
        flex-direction: column;
        margin: 0;
      }
      main {
        display: flex;
        margin: auto;
        width: 960px;
        max-width: 100%;
        padding: 1rem;
        flex-direction: row;
      }
      .sidebar {
        width: 50%;
        min-width: 250px;
        padding-right: 2rem;
        border-right: 1px solid rgb(var(--gray-light));
      }
      .sidebar-header {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
      }
      .sidebar-content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }
      .sidebar h1 {
        font-size: 1.25rem;
        margin: 0;
        line-height: 1.2;
      }
      .sidebar h1 a {
        color: unset;
      }
      .sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0.5rem 0;
      }
      .sidebar ul li {
        margin-bottom: 0.5rem;
      }
      .sidebar a {
        text-decoration: none;
        color: var(--accent);
      }
      .sidebar a:hover {
        text-decoration: underline;
      }
      .sidebar-icons {
        display: flex;
        gap: 0.5rem;
      }
      .content {
        list-style: none;
        padding: 0;
        margin: 0;
        padding-left: 2rem;
      }

      .post {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
      }

      .post-link {
        color: unset;
      }

      .meta {
        font-size: 0.875rem;
        color: rgb(var(--gray-dark));
        margin-bottom: 0.5rem;
      }

      .meta .date {
        font-weight: bold;
      }

      .meta .category {
        margin-left: 0.5rem;
        color: var(--accent);
        text-transform: uppercase;
      }

      .title {
        font-size: 1.25rem;
        margin: 0.5rem 0;
        color: rgb(var(--text-dark));
      }

      .description {
        font-size: 1rem;
        color: rgb(var(--text-light));
        margin: 0.5rem 0;
      }

      .read-link {
        font-size: 0.875rem;
        color: var(--accent);
        text-decoration: none;
        font-weight: bold;
        opacity: 0.7;
        transition: opacity 0.2s ease;
      }

      .read-link:hover {
        opacity: 1;
        text-decoration: underline;
      }

      .avatar-img {
        width: 80px;
        height: 80px;
      }

      @media (max-width: 768px) {
        .avatar-img {
          width: 64px;
          height: 64px;
        }
      }

      @media (max-width: 768px) {
        main {
          flex-direction: column;
          padding: 1rem;
        }
        .sidebar {
          width: 100%;
          min-width: auto;
          padding-right: 0;
          border-right: none;
          border-bottom: 1px solid rgb(var(--gray-light));
          padding-bottom: 1rem;
          margin-bottom: 1rem;
        }
        .sidebar-header {
          align-items: start;
        }
        .sidebar-content {
          gap: 0.5rem;
        }
        .content {
          padding-left: 0;
        }
        .post {
          margin-bottom: 2.5rem;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <div class="sidebar">
        <div class="sidebar-header">
          <Avatar
            className="avatar-img"
            src="/me.jpeg"
            alt="Gabriel Daltoso"
            padding="1px"
            flexShrink={0}
          />
          <div class="sidebar-content">
            <h1>
              <a href="https://ggdaltoso.dev" title="Gabriel Daltoso"
                >Gabriel Daltoso</a
              >
            </h1>
            <div class="sidebar-icons">
              <a href="mailto:me@ggdaltoso.dev" title="Send me an Email"
                ><Mail variant="16x16_4" client:only /></a
              >
              <a
                href="https://github.com/ggdaltoso"
                target="_blank"
                title="Visit my GitHub"
                ><BlankScreen100 variant="16x16_4" client:only /></a
              >
            </div>
          </div>
        </div>
      </div>
      <ul class="content">
        {
          posts.map((post) => {
            if (!post) return null;

            return (
              <li class="post">
                <p class="meta">
                  <span class="date">
                    {new Date(post.date).toLocaleString('en-US', {
                      month: 'long',
                      year: 'numeric',
                    })}
                  </span>
                  <span class="category">{post.category.toUpperCase()}</span>
                </p>
                <a href={`/post${post.slug}`} target="_blank" class="post-link">
                  <h4 class="title">{post.title}</h4>
                </a>
                <p class="description">{post.description}</p>
                <a href={`/post${post.slug}`} target="_blank" class="read-link">
                  Read
                </a>
              </li>
            );
          })
        }
      </ul>
    </main>
  </body>
</html>
